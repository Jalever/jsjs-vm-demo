{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"sourceMap": true,
		"allowJs": false,
		"outDir": "dist",
		"noImplicitAny": true,
		"strict": true,
		"alwaysStrict": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*.ts",
		"tests/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}